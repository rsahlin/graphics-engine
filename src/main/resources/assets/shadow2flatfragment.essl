 /**
 * Fragment shader for shadow pass of untextured tiled sprite renderer
 * @author Richard Sahlin
 */
#version 100
precision mediump float;

uniform sampler2D uShadowTexture;

varying vec4 vLightPos;
varying vec4 color;

void main()
{
    vec4 shadowMapPosition = vLightPos / vLightPos.w;
    float distanceFromLight = texture2D(uShadowTexture, shadowMapPosition.st).r;
    float shadow = distanceFromLight < gl_FragCoord.z ? 0.5 : 1.0 ;
    //float shadow = distanceFromLight;
    gl_FragColor = color * shadow;
}
